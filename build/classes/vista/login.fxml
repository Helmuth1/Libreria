               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="37.0" layoutY="69.0" text="Inicio de sesion de usuario">
               <font>
                  <Font name="Cooper Black" size="26.0" />
               </font>
            </Label>
            <Button fx:id="btlogin" layoutX="143.0" layoutY="361.0" mnemonicParsing="false" onAction="#btnOKClicked" style="-fx-background-color: #00BFFF;" text="Iniciar Sesion">
               <font>
                  <Font name="Arial Black" size="15.0" />
               </font>
            </Button>
            <Label fx:id="lbestado" alignment="CENTER" contentDisplay="CENTER" layoutX="115.0" layoutY="315.0" prefHeight="18.0" prefWidth="190.0" />
         </children>
      </AnchorPane>
   </children>
