            <ImageView fitHeight="130.0" fitWidth="148.0" layoutX="79.0" layoutY="123.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/libros.png" />
               </image>
            </ImageView>
            <Label layoutX="91.0" layoutY="281.0" text="Libreria">
               <font>
                  <Font name="Cooper Black" size="26.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </AnchorPane>
      <AnchorPane layoutX="279.0" layoutY="-1.0" prefHeight="506.0" prefWidth="420.0">
         <children>
            <Button fx:id="btnRegistrar" layoutX="169.0" layoutY="406.0" mnemonicParsing="false" onAction="#handleRegisterClick" style="-fx-background-color: transparent;" text="Registrarse?" textFill="#1d6b9c" />
            <PasswordField fx:id="tfContraseña" layoutX="114.0" layoutY="253.0" prefHeight="30.0" prefWidth="190.0" promptText="Contraseña" style="-fx-border-color: #0598ff; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;">
